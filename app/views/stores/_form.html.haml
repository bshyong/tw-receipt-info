= simple_form_for(@store) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name, :input_html => {"data-provide" => "typeahead", "autocomplete" => "off", :id => "store_name_input"}

  .form-actions
    = f.button :submit

:javascript
  $('#store_name_input').typeahead({source: #{Store.all.pluck(:name).to_json}});